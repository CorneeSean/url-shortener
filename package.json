{
  "name": "url-shortener-frontend",
  "version": "1.0.0",
  "description": "Url Shortener",
  "scripts": {
    "frontend:react": "parcel frontend/src/index.html -d frontend/dist-dev",
    "frontend:react:build": "parcel build frontend/src/index.html -d server/public --public-url ./public/",
    "frontend:widget": "parcel frontend/index.dev.html -p 1337 -d frontend/dist-dev",
    "frontend:widget:build": "parcel build frontend/url-shortener.widget.ts -d server/public",
    "frontend:parcel:build": "npm run frontend:widget:build && npm run frontend:react:build",
    "frontend:dev": "concurrently \"npm run frontend:widget\" \"npm run frontend:react\"",
    "frontend:build": "node ./frontend/build/clean.js && npm run frontend:parcel:build",
    "server:app": "node ./server/server.js",
    "server:demo": "cd ./demo && http-server -p 9000 -o http://localhost:9000/index.html",
    "start": "npm run frontend:build && concurrently \"npm run server:app\" \"npm run server:demo\"",
    "start:dev": "concurrently \"npm run frontend:dev\" \"npm run server:app\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "concurrently": "^5.1.0",
    "http-server": "^0.11.1",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.5",
    "typescript": "^3.9.2"
  }
}
